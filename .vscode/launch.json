{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Frontend",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/frontend",
            "runtimeArgs": ["--media-cache-size=1", "--disk-cache-size=1", "--preserve-symlinks"],
            "smartStep": true,
            "userDataDir": "${workspaceFolder}/.chrome",
            "preLaunchTask": "Delete Chrome Profile",
            "outFiles": ["${workspaceFolder}/frontend/**/*.js"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch HTTPD",
            "cwd": "${workspaceFolder}/frontend/server",
            "program": "${workspaceFolder}/frontend/server/server.js",
            "runtimeArgs": ["--preserve-symlinks"],
            "outFiles": ["${workspaceFolder}/frontend/server/**/*.js"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Backend",
            "program": "${workspaceFolder}/backend/server/server.js",
            "runtimeArgs": ["--preserve-symlinks"],
            "outFiles": ["${workspaceFolder}/backend/**/*.js"]
        },
        {
            "name": "Launch Electron",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            },
            "args" : ["${workspaceFolder}/electron/framework/main.js"],
            "outputCapture": "std"
          },
          {
              "name": "Build Electron Native App",
              "type": "node",
              "request": "launch",
              "cwd": "${workspaceFolder}",
              "program": "${workspaceFolder}/../xforge/xforge",
              "args" : ["-c", "-f", "${workspaceFolder}/electron/buildApp.xf.js", "-o", "rsjspeedxejs", "-o", "${workspaceFolder}"],
              "outputCapture": "std"
            }
    ]
}